<h1>Issues</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Done</th>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody id="issue-list">
    <% if (viewData?.issues?.length) { %>
      <% for (const issue of viewData.issues) { %>
        <tr data-id="<%= issue.gitlabIid %>">
          <td class="text-center text-primary th-lg">
            <input class="form-check-input" type="checkbox" id="doneCheck" disabled <% if (issue.done) { %> checked <% } %> />
          </td>
          <td class="w-auto">
            <img id="avatarPhoto" src="<%= issue.avatar %>" alt="Issue Avatar">
          </td>
          <td class="title <% if (issue.done) { %> text-muted <% } %>">
            <%= issue.title %>
          </td>
          <td class="w-auto <% if (issue.done) { %> text-muted <% } %>">
          <pre style="white-space: pre-wrap;"><%= issue.description %></pre>
          </td>
          <td class="text-nowrap">
            <a href="./issues/<%= issue.gitlabIid %>/update">Update</a>
          </td>
        </tr>
        <% } %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center text-danger">
                There are no issues to display
              </td>
            </tr>
            <% } %>
  </tbody>
</table>

<%# Socket.IO: Template for the client. The same as above, sort of. %>
  <template id="issue-template">
    <tr>
      <td class="text-center text-primary">
        <input class="form-check-input" type="checkbox" disabled />
      </td>
      <td><img id="avatarPhoto"/></td>
      <td class="title"></td>
      <td class="w-auto"></td>
      <td class="text-nowrap">
        <a>Update</a>
      </td>
    </tr>
  </template>